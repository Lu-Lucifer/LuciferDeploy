{
  "name": "LuciferDeploy",
  "version": "2.0.0",
  "description": "陆霸霸的项目发布工具",
  "main": "main.js",
  "scripts": {
    "clean": "yarn autoclean -F",
    "start": "electron .",
    "build": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64"
  },
  "build": {
    "appId": "lucifer",
    "directories": {
      "output": "publish"
    },
    "files": [
      "*.js",
      "*.html",
      "package.json",
      "yarn.lock",
      "node_modules",
      "images"
    ],
    "mac": {
      "icon": "./images/icon.icns",
      "target": ["dmg"]
    },
    "asar": true,
    "compression": "maximum"
  },
  "repository": "https://github.com/LuciferJun1227",
  "author": "Lucifer",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.0.0",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "async": "^3.1.0",
    "compressing": "^1.5.0",
    "crypto": "^1.0.1",
    "fstream": "^1.0.12",
    "layui-src": "^2.5.4",
    "lowdb": "^1.0.0",
    "node-ssh": "^7.0.0",
    "node-uuid": "^1.4.8",
    "ssh2": "^0.8.7",
    "tar": "^5.0.5",
    "zip-local": "^0.3.4",
    "zlib": "^1.0.5"
  }
}
